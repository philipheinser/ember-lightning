{
  "name": "ember-lightning",
  "description": "Ember lightning hosting",
  "keywords": [
    "ember",
    "lightning",
    "hosting",
    "deploy"
  ],
  "website": "http://chat.pixelhandler.com/",
  "addons": [
    "papertrail:choklad"
  ],
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "APP_NAME": {
      "description": "Name of your emberjs app.",
      "value": "chat-app"
    },
    "APP_PORT": {
      "description": "The port the app runs on",
      "value": 8000
    },
    "REDIS_PORT": {
      "description": "Redis port.",
      "value": 6379
    },
    "REDIS_HOST": {
      "description": "Redis host.",
      "value": "127.0.0.1"
    }
  }
}
